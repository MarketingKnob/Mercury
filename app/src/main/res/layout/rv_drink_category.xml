<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="100dp"
    android:background="@color/white"
    android:orientation="vertical">

    <android.support.v7.widget.LinearLayoutCompat
        android:id="@+id/ll_drink"
        android:layout_width="@dimen/pad_70dp"
        android:layout_height="@dimen/pad_70dp"
        android:layout_marginStart="@dimen/pad_10dp"
        android:layout_marginTop="@dimen/pad_10dp"
        android:layout_marginEnd="@dimen/pad_10dp"
        android:background="@drawable/icon_back">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/iv_drink_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/pad_20dp"
            android:src="@drawable/wine_colord" />

    </android.support.v7.widget.LinearLayoutCompat>

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tv_drink_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_drink"
        android:layout_centerInParent="true"
        android:text="Wine"
        android:textAllCaps="true"
        android:textColor="@color/red"
        android:textSize="@dimen/font_small" />

</RelativeLayout>
